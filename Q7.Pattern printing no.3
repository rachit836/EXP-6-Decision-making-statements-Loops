#include <iostream>
using namespace std;

int main() {
    int n = 3;

    
    for(int i = n; i >= 1; i--) {
        for(int space = 0; space < n - i; space++) {
            cout << "  ";
        }
        for(int star = 0; star < 2 * i - 1; star++) {
            cout << "* ";
        }
        cout << endl;
    }

    
    for(int i = 2; i <= n; i++) {
        for(int space = 0; space < n - i; space++) {
            cout << "  ";
        }
        for(int star = 0; star < 2 * i - 1; star++) {
            cout << "* ";
        }
        cout << endl;
    }

    return 0;
}

